    .custom-scrollbar::-webkit-scrollbar-track { background: #f1f1f1; border-radius: 10px; }
    .custom-scrollbar::-webkit-scrollbar-thumb { background: #c5c5c5; border-radius: 10px; }
    .custom-scrollbar::-webkit-scrollbar-thumb:hover { background: #a8a8a8; }

    /* Estilos para o painel de ações global (copiados de ProdutosView) */
    .btn-painel-acao {
      font-size: 0.875rem; /* text-sm */
      font-weight: 600; /* semibold */
      padding: 0.5rem 0.75rem; /* py-2 px-3 */
      border-radius: 0.375rem; /* rounded-md */
      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); /* shadow-sm */
      transition: background-color 0.15s ease-in-out, opacity 0.15s ease-in-out;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.375rem; /* gap-x-1.5 */
      color: white;
      min-width: 100px; /* Largura mínima para consistência */
    }
    .btn-painel-acao svg {
      width: 1rem; /* w-4 */
      height: 1rem; /* h-4 */
    }
    .btn-painel-acao:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    .btn-painel-novo { background-color: #2563eb; /* blue-600 */ }
    .btn-painel-novo:hover:not(:disabled) { background-color: #1d4ed8; /* blue-700 */ }
    
    /* Novo estilo para o botão "Abrir Cotação" */
    .btn-abrir-cotacao { background-color: #10b981; /* green-500 */ }
    .btn-abrir-cotacao:hover:not(:disabled) { background-color: #059669; /* green-600 */ }


    /* Estilos para o Acordeão (mantidos) */
    .accordion-item {
      border: 1px solid #E5E7EB;
      border-radius: 0.5rem;
      margin-bottom: 1rem;
      background-color: #FFFFFF;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
      overflow: hidden;
    }
    .accordion-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      padding: 1rem 1.5rem;
      background-color: #F9FAFB;
      border-bottom: 1px solid #E5E7EB;
      text-align: left;
      font-weight: 600;
      color: #1F2937;
      cursor: pointer;
      transition: background-color 0.2s ease-in-out;
    }
    .accordion-header:hover {
      background-color: #F3F4F6;
    }
    .accordion-header.active {
      background-color: #EFF6FF;
      color: #1D4ED8;
    }
    .accordion-icon {
      width: 1.25rem;
      height: 1.25rem;
      transition: transform 0.3s ease-in-out;
      color: #6B7280;
    }
    .accordion-header.active .accordion-icon {
      transform: rotate(180deg);
      color: #1D4ED8;
    }
    .accordion-content {
      padding: 1.5rem;
      border-top: 1px solid #E5E7EB;
      background-color: #FFFFFF;
    }
    .accordion-content.hidden {
      display: none;
    }

    /* Estilos para o Item de Resumo da Cotação (MODIFICADO para flex) */
    .cotacao-summary-item {
      background-color: #F9FAFB;
      padding: 1rem; /* p-4 */
      border-radius: 0.375rem; /* rounded-md */
      border: 1px solid #E5E7EB; /* gray-200 */
      margin-bottom: 1rem;
      transition: box-shadow 0.2s ease-in-out, border-color 0.2s ease-in-out;
      /* Adicionado display flex para alinhar informações e botão */
      display: flex;
      justify-content: space-between; /* Espaça informações e botão */
      align-items: center; /* Alinha verticalmente ao centro */
      flex-wrap: wrap; /* Permite quebrar linha em telas menores */
      gap: 0.5rem; /* Espaço entre os itens se quebrar linha */
    }
    .cotacao-summary-item:hover {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      border-color: #BFDBFE;
    }
    .cotacao-summary-item:last-child {
      margin-bottom: 0;
    }
    .cotacao-info { /* Novo container para as informações textuais */
        flex-grow: 1; /* Permite que as informações ocupem o espaço disponível */
    }
    .cotacao-id {
      font-size: 1.125rem;
      font-weight: 600;
      color: #1E40AF;
    }
    .cotacao-data {
      font-size: 0.75rem;
      color: #6B7280;
      margin-top: 0.25rem;
    }
    .cotacao-categorias {
      font-size: 0.75rem;
      color: #4B5563;
      margin-top: 0.5rem;
      font-style: italic;
    }
    
    .no-cotacoes-message {
      text-align: center;
      padding: 2rem;
      color: #6B7280;
      font-style: italic;
    }

    .loading-spinner-container {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 2rem;
      color: #3B82F6;
    }
    .loading-spinner-container svg {
      animation: spin 1s linear infinite;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Estilos para o Modal Nova Cotação */
    .modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(0, 0, 0, 0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0.3s ease;
    }
    .modal-overlay.active {
      opacity: 1;
      visibility: visible;
    }
    .modal-content {
      background-color: white;
      padding: 2rem;
      border-radius: 0.5rem;
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
      width: 90%;
      max-width: 600px; 
      max-height: 80vh;
      overflow-y: auto;
    }
    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #e5e7eb;
      padding-bottom: 1rem;
      margin-bottom: 1rem;
    }
    .modal-title {
      font-size: 1.5rem; 
      font-weight: 600; 
      color: #1f2937; 
    }
    .modal-close-btn {
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #6b7280; 
    }
    .modal-body .form-group {
      margin-bottom: 1.25rem;
    }
    .modal-body .form-group label {
      display: block;
      font-weight: 500; 
      color: #374151; 
      margin-bottom: 0.5rem;
    }
    .modal-body select, .modal-body input[type="text"] {
      width: 100%;
      padding: 0.5rem 0.75rem; 
      border: 1px solid #d1d5db; 
      border-radius: 0.375rem; 
      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); 
    }
